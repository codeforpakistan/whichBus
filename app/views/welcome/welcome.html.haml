<!DOCTYPE html>
%html
	%head
		%title PakTransit
		/%link{:href => 'http://fonts.googleapis.com/css?family=Stint+Ultra+Expanded',  :rel => 'stylesheet', :type => 'text/css'}
		= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
		= javascript_include_tag "application", "data-turbolinks-track" => true
		= csrf_meta_tags
	%body.custom
		=render "shared/header"
		
		%div.container.push-center
			=render 'shared/notices'
			%div.well.transparent
				%h1.text-center 
					%div.page-header
						%h1 
							PakTransit
							%small 
								Know Your Way
				%br
				%p.text-center
					-if(admin_signed_in?)
						-if(current_admin.approved? and current_admin.type == 'Admin')
							=link_to "Add Bus Stop", busstop_new_path, :class => "btn btn-primary"
							=link_to "Add Route", route_new_path, :class => "btn btn-primary"
						-if(current_admin.type == 'Company')
							=link_to "See Routes for your company", company_showAll_path, :class => "btn btn-primary"
					-else
						=link_to "Login", new_admin_session_path, :class => "btn btn-primary"
						=link_to "signUp", new_admin_registration_path, :class => "btn btn-primary"
				/
					%div.text-center
						%a.btn.btn-primary.btn-lg{:href => "#loginModel", :data => {:toggle => "modal"}} 
							Login

						%a.btn.btn-primary.btn-lg{:href => "#signupModel", :data => {:toggle => "modal"}} 
							Sign up
					
					%div.modal.fade#loginModel{:tabindex => "-1", :role => "dialog", :aria =>{:labelledby => "myModalLabel"}, :aria =>{:hidden => "true"}}
						%div.modal-dialog
							%div.modal-content
								%div.modal-header
									%button.close{:type => "button", :data =>{:dismiss => "modal"}, :aria =>{:hidden => "true"}}
										&times;
									%h4.modal-title
										Login
								%div.modal-body
									
								%div.modal-footer
									%button.btn.btn-default{:type => "button", :data =>{:dismiss => "modal"}}
										Cancel
									%button.btn.btn-primary{:type => "button"} 
										Login
															
			
					%div.modal.fade#signupModel{:tabindex => "-1", :role => "dialog", :aria =>{:labelledby => "myModalLabel"}, :aria =>{:hidden => "true"}}
						%div.modal-dialog
							%div.modal-content
								%div.modal-header
									%button.close{:type => "button", :data =>{:dismiss => "modal"}, :aria =>{:hidden => "true"}}
										&times;
									%h4.modal-title
										Sign Up
								%div.modal-body
									%h1
										hello world
										its body
								%div.modal-footer
									%button.btn.btn-default{:type => "button", :data =>{:dismiss => "modal"}}
										Cancel
									%button.btn.btn-primary{:type => "button"} 
										Sign up
