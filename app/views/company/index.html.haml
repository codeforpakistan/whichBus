/%h1 Showing All Routes for Company
-if @companyRoutes.blank?
	%h3= "Nothing to show"
	=link_to "Show All Routes", company_showAll_path, :class => "btn btn-primary"
-else
	/
		%div
			%a.btn.btn-primary.btn-lg{:href => "#myModal", :data => {:toggle => "modal"}} 
				Add
			%div.modal.fade#myModal{:tabindex => "-1", :role => "dialog", :aria =>{:labelledby => "myModalLabel"}, :aria =>{:hidden => "true"}}
				%div.modal-dialog
					%div.modal-content
						%div.modal-header
							%button.close{:type => "button", :data =>{:dismiss => "modal"}, :aria =>{:hidden => "true"}}
								&times;
							%h4.modal-title
								Choose Routes
						%div.modal-body
							%h1
								hello world
								its body
						%div.modal-footer
							%button.btn.btn-default{:type => "button", :data =>{:dismiss => "modal"}}
								Close
							%button.btn.btn-primary{:type => "button"} 
								Save changes

	
	%div
		%table.table.table-hover.table-condensed.text-center
			%tr
				%th.text-center 
					Route Id
				%th.text-center
					Route Name
				%th.text-center
					Route Source
				%th.text-center
					Route Destination
				%th.text-center 
					Options
			-@companyRoutes.each do |r|
				%tr
					%td= r.id
					%td= r.routeName
					%td= r.routeSourceName
					%td= r.routeDestName
					%td
						= link_to company_route_details_path(r.id) do
							= content_tag :button, :class => "btn btn-primary" do
								= content_tag :span, class: "glyphicon glyphicon-list" do
									=""
						|
						= link_to company_remove_company_route_path(r.id), method: :post, data: { :confirm => 'Are you sure?' } do
							= content_tag :button, :class => "btn btn-danger" do
								= content_tag :span, class: "glyphicon glyphicon-remove" do
									=""
					