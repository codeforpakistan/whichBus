
-if @editRoute.blank?
	="No such Route Found."
-else
	%h3
		Edit Route:
		%span.label.label-info
			="#{@editRoute.routeName}"
		%br
	=form_for :route, url:{action: "update"}, html:{class: "form-horizontal"} do |f|
		%div.form-group
			=f.label :routeName, 'Route Name', {:class => 'col-lg-2 control-label'}
			%span.error_message
			- if not (@editRoute.errors[:routeName].blank?)
				=@editRoute.errors[:routeName].second
			%div.col-lg-3
				=f.text_field :routeName,{:class => 'form-control', :value => @editRoute.routeName}
		%div.form-group
			=f.label :routeSourceName, 'Route Source Name', {:class => 'col-lg-2 control-label'}
			%span.error_message
				- if not (@editRoute.errors[:routeName].blank?)
					=@editRoute.errors[:routeName].second
			%div.col-lg-3
				=f.text_field :routeSourceName, {:class => 'form-control', :value => @editRoute.routeSourceName}
		%div.form-group
			=f.label :routeDestName, 'Route Dest Name', {:class => 'col-lg-2 control-label'}
			%span.error_message
				- if not (@editRoute.errors[:routeDestName].blank?)
					=@editRoute.errors[:routeDestName].second
			%div.col-lg-3
				=f.text_field :routeDestName, {:class => 'form-control', :value => @editRoute.routeDestName}
		%div.form-group
			=f.label :routeDistance, 'Route Distance (Km)', {:class => 'col-lg-2 control-label'}
			%span.error_message
				- if not (@editRoute.errors[:routeDistance].blank?)
					=@editRoute.errors[:routeDistance].second
			%div.col-lg-3	
				=f.text_field :routeDistance, {:class => 'form-control', :value => @editRoute.routeDistance}
		%div.form-group
			=f.label :routeSourceLatLong, 'Route Source LatLong', {:class => 'col-lg-2 control-label'}
			%span.error_message
				- if not (@editRoute.errors[:routeSourceLatLong].blank?)
					=@editRoute.errors[:routeSourceLatLong].second
			%div.col-lg-3
				=f.text_field :routeSourceLatLong, {:class => 'form-control', :value => @editRoute.routeSourceLatLong}
		%div.form-group
			=f.label :routeDestLatLong, 'Route Dest LatLong', {:class => 'col-lg-2 control-label'}
			%span.error_message
				- if not (@editRoute.errors[:routeDestLatLong].blank?)
					=@editRoute.errors[:routeDestLatLong].second
			%div.col-lg-3
				=f.text_field :routeDestLatLong, {:class => 'form-control', :value => @editRoute.routeDestLatLong}
		%div.form-group
			=f.label :routeTravelTime, 'Route Travel Time', {:class => 'col-lg-2 control-label'}
			%div.col-lg-3
				=f.time_field :routeTravelTime, {:class => 'form-control', :value => @editRoute.routeTravelTime}
		%div.form-group
			=f.label :routeStartTime, 'Route Start Time', {:class => 'col-lg-2 control-label'}
			%div.col-lg-3
				=f.time_field :routeStartTime, {:class => 'form-control', :value => @editRoute.routeStartTime}
		%div.form-group
			=f.label :routeStopTime, 'Route Stop Time', {:class => 'col-lg-2 control-label'}
			%div.col-lg-3
				=f.time_field :routeStopTime, {:class => 'form-control', :value => @editRoute.routeStopTime}
		%div.form-group
			%div.col-lg-offset-2.col-lg-10
				=f.submit :class => 'btn btn-primary'
				%button.btn.btn-danger{:type => 'button'}
					="Cancel"


