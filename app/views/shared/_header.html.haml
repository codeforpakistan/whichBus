%div.navbar-text.pull-right
	-if admin_signed_in?
		- user = current_admin
		%div.btn-group
			%button.btn.btn-default.dropdown-toggle{ :type => "button", :data => {:toggle => "dropdown"}}
				-if user.userName.blank?
					="#{user.type}: #{user.firstName} #{user.lastName}"
				-else
					="#{user.type}: #{user.userName}"
				%span.glyphicon.glyphicon-chevron-down
			%ul.dropdown-menu{role: "menu"}
				%li
					=link_to 'Edit Profile', edit_admin_registration_path
				%li.divider

				%li
					=link_to "Logout", destroy_admin_session_path, method: :delete, :class => 'navbar-link'
				%li.divider
				%li
					=link_to "Cancel Account", cancel_admin_registration_path, :class => "navbar-link", :data => { :confirm => "Are you sure?" }, :method => :delete
	-else
		= link_to "Sign up", new_admin_registration_path, :class => 'navbar-link'
		= link_to "Login", new_admin_session_path, :class => 'navbar-link'	
