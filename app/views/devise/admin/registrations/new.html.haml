%h2 Sign up
= form_for(resource, :as => resource_name, :url => registration_path(resource_name),  :html => {:class => "form-horizontal" }) do |f|
	- resource.errors.full_messages
	%div.form-group
		=f.label :firstName, 'First Name', {:class => 'col-lg-2 control-label'}
		%span.error-message
			- if not (resource.errors[:firstName].blank?)
				= resource.errors[:firstName].to_s
		%div.col-lg-3
			=f.text_field :firstName, {:class => 'form-control' , :placeholder => "Asad"}
	%div.form-group
		=f.label :lastName, 'Last Name', {:class => 'col-lg-2 control-label'}
		%span.error-message
			- if not (resource.errors[:lastName].blank?)
				= resource.errors[:lastName].to_s
		%div.col-lg-3
			=f.text_field :lastName, {:class => 'form-control', :placeholder => "Ali"}
	%div.form-group
		=f.label :email, 'Email', {:class => 'col-lg-2 control-label'}
		%span.error-message
			- if not (resource.errors[:email].blank?)
				= resource.errors[:email].to_s
		%div.col-lg-3
			=f.email_field :email, {:class => 'form-control', :placeholder => "someone@example.com"}
	%div.form-group
		=f.label :password, 'Password', {:class => 'col-lg-2 control-label'}
		%span.error-message
			- if not (resource.errors[:password].blank?)
				= resource.errors[:password].to_s
		%div.col-lg-3
			=f.password_field :password, {:class => 'form-control', :placeholder => "Pasword"}
	%div.form-group
		=f.label :password_confirmation, 'Password Confirmation', {:class => 'col-lg-2 control-label'}
		%span.error-message
			- if not (resource.errors[:password_confirmation].blank?)
				= resource.errors[:password_confirmation].to_s
		%div.col-lg-3
			=f.password_field :password_confirmation, {:class => 'form-control', :placeholder => "Retype Password"}
	%div.form-group
		=f.label :userName, 'User Name', {:class => 'col-lg-2 control-label'}
		%span.error-message
			- if not (resource.errors[:userName].blank?)
				= resource.errors[:userName].to_s
		%div.col-lg-3
			=f.text_field :userName, {:class => 'form-control', :placeholder => "itssaad"}
	%div.form-group
		=f.label :streetAddress, 'Street Address', {:class => 'col-lg-2 control-label'}
		%duv.col-lg-3
			=f.text_field :streetAddress, {:class => 'form-control', :placeholder => "29 Asif Block"}
	%div.form-group
		=f.label :city, 'City', {:class => 'col-lg-2 control-label'}
		%div.col-lg-3
			=f.text_field :city, {:class => 'form-control', :placeholder => "Lahore"}
	%div.form-group
		=f.label :town, 'Town', {:class => 'col-lg-2 control-label'}
		%div.col-lg-3
			=f.text_field :town, {:class => 'form-control', :placeholder => "Allama Iqbal Town"}
	%div.form-group
		=f.label :contactNumber, 'Contact Number',  {:class => 'col-lg-2 control-label'}
		%span.error-message
			- if not (resource.errors[:contactNumber].blank?)
				= resource.errors[:contactNumber].to_s
		%div.col-lg-3
			=f.text_field :contactNumber, {:class => 'form-control', :placeholder => "032312345678"}
	%div.form-group
		=f.label :secContactNumber, 'Sec Contact Number', {:class => 'col-lg-2 control-label'}
		%div.col-lg-3
			=f.text_field :secContactNumber, {:class => 'form-control', :placeholder => "032312345678"}
	%div.form-group
		=f.label :organization, 'Organization', {:class => 'col-lg-2 control-label'}
		%div.col-lg-3
			=f.text_field :organization, {:class => 'form-control', :placeholder => "UOL"}
	%div.form-group
		=f.label :type, 'Type', {:class => 'col-lg-2 control-label'}
		%div.col-lg-3
			=f.select(:type, ['Company', 'Admin'], {}, { :class => 'form-control' })
	%div.form-group
		%div.col-lg-offset-2.col-lg-10
			=f.submit :class => "btn btn-primary", :value => "Sign Up"


=render "devise/shared/links"
