%h3 List of Users 
%br
%br
=link_to "Pending Users", admin_pending_user_path, :class => "btn btn-primary"
-# user = current_admin
%br
-if @admins.blank?
	%h3= "No User found."
-else
	%br
	%table.table.table-hover.table-condensed.text-center
		%tr
			%th.text-center
				User Name 
			%th.text-center
				Email
			%td.text-center
				First Name
			%td.text-center
				Last Name
			%td.text-center
				Status By
		-@admins.each do |a|
			%tr
				%td= link_to a.userName, admin_user_profile_path(a.id)
				%td= a.email
				%td= a.firstName
				%td= a.lastName
				-if a.approved? 
					%td= "Approved"
				-else
					%td= "Pending"
				